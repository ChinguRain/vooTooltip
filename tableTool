<template>
  <v-app>
    <v-container>
      <v-table>
        <thead>
          <tr>
            <th>Fruits</th>
            <th>Quantity</th>
          </tr>
        </thead>
        <tbody>
          <tr v-for="(item, index) in items" :key="index">
            <td>
              <v-tooltip v-model="tooltipVisible[index]" location="top">
                <template v-slot:activator="{ props }">
                  <span v-bind="props" class="ellipsis">
                    {{ item.word }}
                  </span>
                </template>
                <span>This is a tooltip for "{{ item.word }}"!</span>
              </v-tooltip>
            </td>
            <td>{{ item.quantity }}</td>
          </tr>
        </tbody>
      </v-table>
    </v-container>
  </v-app>
</template>

<script>
export default {
  name: 'TooltipTableExample',
  data() {
    return {
      items: [
        { word: 'Apple', quantity: 10 },
        { word: 'Banana', quantity: 20 },
        { word: 'Cherry', quantity: 15 },
        { word: 'Date', quantity: 5 },
        { word: 'Elderberry', quantity: 8 },
        { word: 'A very long word that should be truncated with an ellipsis', quantity: 12 },
      ],
      tooltipVisible: Array(6).fill(false), // Adjust the size based on the number of items
      currentWordIndex: 0,
    };
  },
  mounted() {
    setInterval(() => {
      // Hide the current tooltip
      this.tooltipVisible[this.currentWordIndex] = false;

      // Move to the next word
      this.currentWordIndex = (this.currentWordIndex + 1) % this.items.length;

      // Show the tooltip for the new current word
      this.tooltipVisible[this.currentWordIndex] = true;
    }, 3000); // Change tooltip every 3 seconds
  },
};
</script>

<style scoped>
.ellipsis {
  display: inline-block; /* Required for text-overflow to work */
  max-width: 150px; /* Set a max width for the text */
  overflow: hidden; /* Hide overflow */
  white-space: nowrap; /* Prevent text from wrapping */
  text-overflow: ellipsis; /* Show ellipsis (...) */
}
</style>
